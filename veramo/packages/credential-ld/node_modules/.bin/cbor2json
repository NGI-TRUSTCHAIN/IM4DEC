#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules/borc/bin/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules/borc/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules/borc/bin/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules/borc/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/borc@3.0.0/node_modules:/Users/christoph/projects/im4dec/impl/veramo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../borc/bin/cbor2json.js" "$@"
else
  exec node  "$basedir/../borc/bin/cbor2json.js" "$@"
fi
